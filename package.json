{
  "name": "root",
  "private": true,
  "scripts": {
    "publish": "lerna run tsc && lerna publish",
    "pages": "lerna run publish-storybook",
    "start": "lerna bootstrap",
    "web": "yarn start & cd ./packages/bones-web-app & yarn start",
    "mobile": "lerna bootstrap && pushd ./packages/bones_react_native_app/ && yarn run ios & pushd ./packages/bones_react_native_app/ && yarn run start",
    "clean": "rm -rf ./packages/*/node_modules",
    "clean-locks": "rm -rf ./packages/*/yarn.lock",
    "reset": "yarn clean && yarn clean-locks && yarn bootstrap"
  },
  "devDependencies": {
    "react-native": "*",
    "@types/node": "^14.14.14",
    "babel-jest": "^24.9.0",
    "lerna": "^3.22.1",
    "typescript": "~3.7.2"
  }
}
